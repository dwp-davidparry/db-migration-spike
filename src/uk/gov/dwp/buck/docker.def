def docker(
    name,
    app_home,
    cmd,
#    conf = [],
    lib  = [],
    docker_file = 'Dockerfile'):
    cmd = [
        '$(exe //src/uk/gov/dwp/buck:create_dockerfile)',
        '--cmd', cmd,
        '--out', '$OUT',
        '--home', app_home,
        '--tmp', '$TMP']
#    for c in conf:
#        cmd.extend(['--conf ', '$(location %s)' % c])
    for l in lib:
        cmd.extend(['--lib ', '$(classpath %s)' % l])
    genrule(
       name = name,
       bash = ' '.join(cmd),
       out  = docker_file,
    )

